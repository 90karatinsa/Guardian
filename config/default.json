{
  "app": {
    "name": "Guardian"
  },
  "logging": {
    "level": "info"
  },
  "database": {
    "path": "data/events.sqlite"
  },
  "events": {
    "thresholds": {
      "info": 0,
      "warning": 5,
      "critical": 10
    }
  },
  "video": {
    "testFile": "assets/test-video.mp4",
    "framesPerSecond": 2,
    "cameras": [
      {
        "id": "test-camera",
        "channel": "video:test-camera",
        "input": "assets/test-video.mp4",
        "person": {
          "score": 0.5
        }
      }
    ]
  },
  "person": {
    "modelPath": "models/yolov8n.onnx",
    "score": 0.5,
    "checkEveryNFrames": 3,
    "maxDetections": 5,
    "snapshotDir": "snapshots",
    "minIntervalMs": 2000
  },
  "motion": {
    "diffThreshold": 25,
    "areaThreshold": 0.015,
    "minIntervalMs": 1500
  }
}
